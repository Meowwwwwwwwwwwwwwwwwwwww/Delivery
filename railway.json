{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "nixpacksPlan": {
      "providers": ["python", "node"], 
      "phases": {
        "build": {
          "cmds": [
            "pip install -r requirements.txt",
            
            "cd delivery/frontend_build && npm install && npm run build",
            
            "cd ../..",
            
            "cp -r delivery/frontend_build/build/* delivery/backend_project/static/"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "python delivery/manage.py migrate --no-input && cd delivery && gunicorn delivery.wsgi:application --bind 0.0.0.0:$PORT"
  }
}